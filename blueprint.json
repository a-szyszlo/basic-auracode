{
  "$schema": "https://playground.wordpress.net/blueprint-schema.json",
  "landingPage": "/wp-admin/",
  "preferredVersions": {
    "php": "8.2",
    "wp": "latest"
  },
  "features": {
    "networking": true
  },
  "steps": [
    {
      "step": "installTheme",
      "themeZipFile": {
        "resource": "url",
        "url": "https://github.com/a-szyszlo/basic-auracode/releases/latest/download/basic-auracode.zip",
        "caption": "Pobieranie i instalacja motywu AuraCode Basic"
      }
    },
    {
      "step": "activateTheme",
      "themeFolderName": "auracode-basic"
    },
    {
      "step": "runPHP",
      "code": "<?php require_once 'wp-load.php'; require_once 'wp-admin/includes/translation-install.php'; wp_download_language_pack('pl_PL'); update_option('WPLANG', 'pl_PL'); ?>"
    }
  ]
}