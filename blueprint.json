{
  "$schema": "https://playground.wordpress.net/blueprint-schema.json",
  "landingPage": "/wp-admin/",
  "preferredVersions": {
    "php": "8.2",
    "wp": "latest"
  },
  "locale": "pl_PL",
  "features": {
    "networking": true
  },
  "steps": [
    {
      "step": "installTheme",
      "themeZipFile": {
        "resource": "url",
        "url": "https://github.com/a-szyszlo/basic-auracode/releases/latest/download/basic-auracode.zip",
        "caption": "Pobieranie i instalacja motywu AuraCode Basic"
      }
    },
    {
      "step": "activateTheme",
      "themeFolderName": "auracode-basic"
    },
    {
      "step": "wpCli",
      "command": "language core install pl_PL && language core activate pl_PL"
    },
    {
      "step": "runPHP",
      "code": "update_option('WPLANG','pl_PL');"
    }
  ]
}